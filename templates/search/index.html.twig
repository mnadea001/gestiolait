{% extends 'base.html.twig' %}

{% block title %}
	Resultat de recherche
{% endblock %}

{% block body %}


	{% if app.request.method == 'POST' %}
		<div>
			{% if animal| length == 0 %}
				<h4>
					Aucun résulat pour votre recherche.
				</h4>
				<button type="button" class="btn btn-secondary">

					<a href="{{ path('app_animal_index') }}">
						Retour à la liste des animaux
					</a>

				</button>

			{% else %}

				<h3 class="mt-3" style="color:#2E9C56;">
					<strong>
						Vos résulats de recherche :
					</strong>
				</h3>

				<a href="{{ path('app_animal_index') }}">
					Retour à la liste des animaux
				</a>

				<div class="row row-cols-1 row-cols-md-3 g-4">

					{% for animal in animal %}
						<div class="card2 mb-3" style="max-width: 840px;">
							
								<div class="single-card">
									<div class="row g-0 card-inline">
										<div class="col-md-8">
											<div class="card-body">
												<h3 class="card-title">
													{{ animal.name }}
												</h3>
												<button>
													{{ animal.label}}
												</button>
											
										
												<a href="{{ path('app_animal_show', {'id': animal.id}) }}">
													voir la fiche detail 
												</a>
										
										</div>
									</div>
								</div>
							
						</div>
					{% endfor %}
				</div>
			</div>
		{% endif %}

</div>
{% endif %}



{% endblock %}
