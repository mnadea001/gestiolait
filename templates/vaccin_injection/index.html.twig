{% extends 'base.html.twig' %}

{% block title %}VaccinInjection index{% endblock %}

{% block body %}
    <h1>VaccinInjection index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Injection_date</th>
                <th>End_period</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vaccin_injection in vaccin_injections %}
            <tr>
                <td>{{ vaccin_injection.id }}</td>
                <td>{{ vaccin_injection.name }}</td>
                <td>{{ vaccin_injection.injectionDate ? vaccin_injection.injectionDate|date('Y-m-d') : '' }}</td>
                <td>{{ vaccin_injection.endPeriod ? vaccin_injection.endPeriod|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_vaccin_injection_show', {'id': vaccin_injection.id}) }}">show</a>
                    <a href="{{ path('app_vaccin_injection_edit', {'id': vaccin_injection.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_vaccin_injection_new') }}">Create new</a>
{% endblock %}
